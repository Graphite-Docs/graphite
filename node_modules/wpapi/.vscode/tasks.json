{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "Build",
      "command": "npm",
      "args": ["run", "build"],
      "isBuildCommand": true,
      "isShellCommand": true,
      "isBackground": true
    },
    {
      "taskName": "Test (Unit Tests Only)",
      "command": "npm",
      "args": ["run", "test:unit"],
      "isTestCommand": true,
      "isShellCommand": true,
      "isBackground": true
    },
    {
      "taskName": "Playground",
      "command": "node",
      "args": ["test"],
      "isBuildCommand": false,
      "isShellCommand": true,
      "isBackground": false
    }
  ],
  "echoCommand": true
}
