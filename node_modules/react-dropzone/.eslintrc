{
  "extends": [
    "okonet",
    "prettier"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    // React
    "react/forbid-prop-types": [
      2,
      {
        "forbid": [
          "any",
          "array"
        ]
      }
    ],
    "react/require-default-props": 0,

    // Import
    "import/no-extraneous-dependencies": [
      2,
      {
        "devDependencies": [
          "webpack*.js",
          "**/*.spec.js",
          "**/testSetup.js"
        ]
      }
    ]
  }
}
