{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"complexity": [2, 16],
		"eqeqeq": [2, "allow-null"],
		"indent": [2, 2],
		"max-depth": [2, 5],
		"max-statements": [2, 29],
		"no-continue": [1],
		"no-restricted-syntax": [2, "BreakStatement", "DebuggerStatement", "LabeledStatement", "WithStatement"],
		"sort-keys": 0,
		"spaced-comment": [1, "always", { "markers": ["*"] }]
	}
}
